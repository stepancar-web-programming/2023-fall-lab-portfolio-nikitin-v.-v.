{
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2023
    },
    "plugins": [
      "html"
    ],
    "overrides": [
    {
        "files": ["*.html"],
        "rules": {
            "indent": ["error", 2],
            "no-multiple-empty-lines": "warn",
            "no-undef":"off"
        }
    }],
    "rules": {
        "semi": "error",
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "comma-spacing":"error",
        "no-unused-vars": "warn"
    }
  }